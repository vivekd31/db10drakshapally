extends layout

block content
  h1= title

  - let bakeryid = toShow._id
  - let bakeryItemname = toShow.Itemname
  - let bakeryQuantity = toShow.Quantity
  - let bakeryprice = toShow.price
  
  div.row(class='mb-2')
    div.mr-1 ID is
    div #{bakeryid}
  - let actionid = "/resource/bakery/" + bakeryid
  form(id='bakeryForm', action= actionid, method="PUT")
    div.form-group
        label.costumeAttr(for='Itemname') bakery Itemname
        input#Itemname(type='text', name='Itemname', value= Itemname )
    div.form-group
        label.costumeAttr(for='Quantity') bakery Quantity
        input#Quantity(type='number', name='Quantity', value= Quantity )
    div.form-group
        label.costumeAttr(for='price') bakery price
        input#price(type='text', name='price', value= price )
    input(type="submit")

  script.
    document.forms['bakeryForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      console.log(event.target)
      // TODO do something here to show user that form is being submitted
      fetch(event.target.action, {
        method: 'PUT',
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form
      }).then((resp) => {
        return resp.json(); // or resp.text() or whatever the server sends
      }).then((body) => {
        alert("Update succeded")
        // TODO handle body
      }).catch((error) => {
        // TODO handle error
        alert("Update failed " + error )
      });
    });